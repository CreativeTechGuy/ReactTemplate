{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
	"plugins": [
		"react",
		"react-hooks",
		"testing-library",
		"jest"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"plugin:testing-library/recommended",
		"plugin:jest/recommended"
	],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"react/prop-types": "off",
		"jest/expect-expect": [
			"error",
			{
				"assertFunctionNames": [
					"expect",
					"*.find(All)?By*",
					"*.get(All)?By*"
				]
			}
		]
	}
}