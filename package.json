{
    "name": "react-template",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "webpack serve",
        "release": "npm run lint && npm run format:check && npm run ts-check && npm run test && npm run build",
        "build": "npm run build:production",
        "build:production": "npm run clean:dist && webpack --mode=production",
        "build:development": "npm run clean:dist && webpack --mode=development",
        "bundle-analysis": "webpack --mode=production --env showBundleAnalysis",
        "lint": "eslint . --max-warnings 0 --cache --cache-location ./cache/.eslint/",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "ts-check": "tsc --skipLibCheck",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "spellcheck": "cspell \"**/*.{js,ts,jsx,tsx,json,html,xml,svg,css,scss,sass,md}\"",
        "list-outdated-dependencies": "npm-check-updates --format repo --peer",
        "update-dependencies": "npm-check-updates --peer -u && npm install && npm run lint:fix && npm run format && npm run release",
        "clean": "rm -rf node_modules coverage dist cache",
        "clean:dist": "rm -rf dist",
        "prepare": "husky install"
    },
    "author": "",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.4",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.40",
        "@types/react-dom": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "babel-loader": "^8.2.3",
        "copy-webpack-plugin": "^10.2.4",
        "core-js": "^3.21.1",
        "cspell": "^5.19.0",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^3.4.1",
        "eslint": "^8.11.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.1.1",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.3",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-testing-library": "^5.1.0",
        "fork-ts-checker-webpack-plugin": "^7.2.1",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.5",
        "mini-css-extract-plugin": "^2.6.0",
        "mini-svg-data-uri": "^1.4.4",
        "npm-check-updates": "^12.5.3",
        "postcss": "^8.4.8",
        "postcss-loader": "^6.2.1",
        "postcss-preset-env": "^7.4.2",
        "prettier": "^2.5.1",
        "react-refresh": "^0.11.0",
        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "typescript": "^4.6.2",
        "webpack": "^5.70.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    },
    "engines": {
        "node": ">=16.8.0"
    }
}
