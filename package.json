{
    "name": "react-template",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "webpack serve",
        "release": "npm run lint && npm run format:check && npm run test && npm run build",
        "build": "npm run build:production",
        "build:production": "npm run clean:dist && webpack --mode=production",
        "build:development": "npm run clean:dist && webpack --mode=development",
        "bundle-analysis": "webpack --mode=production --env showBundleAnalysis",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "ts-check": "tsc",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "spellcheck": "cspell \"**/*.{js,ts,jsx,tsx,json,html,xml,svg,css,scss,sass,md}\"",
        "list-outdated-dependencies": "npm-check-updates --format repo",
        "update-dependencies": "npm-check-updates -u && npm install && npm run release",
        "clean": "rm -rf node_modules coverage dist",
        "clean:dist": "rm -rf dist",
        "prepare": "husky install"
    },
    "author": "",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/eslint-parser": "^7.15.4",
        "@babel/preset-env": "^7.15.4",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/jest": "^27.0.1",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^9.0.1",
        "core-js": "^3.17.2",
        "cspell": "^5.9.0",
        "css-loader": "^6.2.0",
        "css-minimizer-webpack-plugin": "^3.0.2",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.25.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^4.12.1",
        "fork-ts-checker-webpack-plugin": "^6.3.3",
        "html-webpack-plugin": "^5.3.2",
        "husky": "^7.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.1.1",
        "lint-staged": "^11.1.2",
        "mini-css-extract-plugin": "^2.2.2",
        "mini-svg-data-uri": "^1.3.3",
        "npm-check-updates": "^11.8.5",
        "postcss": "^8.3.6",
        "postcss-loader": "^6.1.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.3.2",
        "sass": "^1.39.0",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "typescript": "^4.4.2",
        "webpack": "^5.52.0",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.1.1"
    },
    "engines": {
        "node": ">=16.8.0"
    }
}
