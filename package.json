{
    "name": "react-template",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "webpack serve",
        "release": "npm run lint && npm run format:check && npm run ts-check && npm run spellcheck && npm run test && npm run build",
        "build": "npm run build:production",
        "build:production": "npm run clean:dist && webpack --node-env production",
        "build:development": "npm run clean:dist && webpack --node-env development",
        "bundle-analysis": "webpack --node-env production --env showBundleAnalysis",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "ts-check": "tsc --skipLibCheck",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "spellcheck": "cspell --dot \"**/*.{js,ts,jsx,tsx,json,html,xml,svg,css,scss,sass,md}\"",
        "list-outdated-dependencies": "npm-check-updates --format repo --peer",
        "update-dependencies": "npm-check-updates --peer -u && npm install && npm update && npm run lint:fix && npm run format && npm run release",
        "clean": "rm -rf node_modules coverage dist cache",
        "clean:dist": "rm -rf dist",
        "prepare": "husky install"
    },
    "author": "",
    "dependencies": {
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.10",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.17.10",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^14.1.1",
        "@types/jest": "^27.5.0",
        "@types/react": "^18.0.8",
        "@types/react-dom": "^18.0.3",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser": "^5.22.0",
        "babel-loader": "^8.2.5",
        "copy-webpack-plugin": "^10.2.4",
        "core-js": "^3.22.4",
        "cspell": "^5.20.0",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^3.4.1",
        "eslint": "^8.14.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.1.5",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.5.0",
        "eslint-plugin-testing-library": "^5.3.1",
        "fork-ts-checker-webpack-plugin": "^7.2.11",
        "html-minimizer-webpack-plugin": "^3.5.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^28.0.3",
        "jest-environment-jsdom": "^28.0.2",
        "lint-staged": "^12.4.1",
        "mini-css-extract-plugin": "^2.6.0",
        "mini-svg-data-uri": "^1.4.4",
        "npm-check-updates": "^12.5.11",
        "postcss": "^8.4.13",
        "postcss-loader": "^6.2.1",
        "postcss-preset-env": "^7.5.0",
        "prettier": "^2.6.2",
        "react-refresh": "^0.13.0",
        "sass": "^1.51.0",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "typescript": "^4.6.4",
        "webpack": "^5.72.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.9.0"
    },
    "engines": {
        "node": ">=16.8.0"
    }
}
