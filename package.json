{
	"name": "react-template",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"start": "webpack-dev-server",
		"release": "npm run clean:dist && npm run lint && npm run format:check && npm run test && npm run build",
		"build": "npm run build:production",
		"build:production": "webpack --mode=production",
		"build:development": "webpack --mode=development",
		"bundle-analysis": "webpack --mode=production --env showBundleAnalysis",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "npm run lint -- --fix",
		"test": "jest",
		"ts-check": "tsc",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"spellcheck": "cspell \"src/**\" \"test/**\" \"*.md\"",
		"list-outdated-dependencies": "npm-check-updates --format repo",
		"update-dependencies": "npm-check-updates -u && npm install && npm run release",
		"clean": "rm -rf node_modules coverage dist temp",
		"clean:dist": "rm -rf dist",
		"prepare": "husky install"
	},
	"author": "",
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
