{
    "name": "react-template",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "webpack-dev-server",
        "release": "npm run lint && npm run format:check && npm run test && npm run build",
        "build": "npm run build:production",
        "build:production": "npm run clean:dist && webpack --mode=production",
        "build:development": "npm run clean:dist && webpack --mode=development",
        "bundle-analysis": "webpack --mode=production --env showBundleAnalysis",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "ts-check": "tsc",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "spellcheck": "cspell \"src/**\" \"test/**\" \"*.md\"",
        "list-outdated-dependencies": "npm-check-updates --format repo",
        "update-dependencies": "npm-check-updates -u && npm install && npm run release",
        "clean": "rm -rf node_modules coverage dist temp",
        "clean:dist": "rm -rf dist",
        "prepare": "husky install"
    },
    "author": "",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/eslint-parser": "^7.14.7",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.1.9",
        "@types/jest": "^26.0.24",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^9.0.1",
        "core-js": "^3.15.2",
        "cspell": "^5.6.6",
        "css-loader": "^6.0.0",
        "css-minimizer-webpack-plugin": "^3.0.2",
        "eslint": "^7.30.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^4.9.0",
        "fork-ts-checker-webpack-plugin": "^6.2.12",
        "html-webpack-plugin": "^5.3.2",
        "husky": "^7.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.1",
        "mini-css-extract-plugin": "^2.1.0",
        "mini-svg-data-uri": "^1.3.3",
        "npm-check-updates": "^11.8.3",
        "optimize-css-assets-webpack-plugin": "^6.0.1",
        "postcss": "^8.3.5",
        "postcss-loader": "^6.1.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.3.2",
        "sass": "^1.35.2",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.1.0",
        "terser-webpack-plugin": "^5.1.4",
        "typescript": "^4.3.5",
        "webpack": "^5.44.0",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^4.0.0-beta.3"
    }
}
